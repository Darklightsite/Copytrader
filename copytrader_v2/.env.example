# Copytrader v2 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Security & Encryption
COPYTRADER_ENCRYPTION_KEY=your_encryption_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bybit API Configuration (Master Account)
MASTER_API_KEY=your_master_api_key_here
MASTER_API_SECRET=your_master_api_secret_here
MASTER_API_URL=https://api.bybit.com

# Bybit API Configuration (Slave Account)
SLAVE_API_KEY=your_slave_api_key_here
SLAVE_API_SECRET=your_slave_api_secret_here
SLAVE_API_URL=https://api-testnet.bybit.com

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///data/copytrader.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=data/logs

# Risk Management
DEFAULT_COPY_MULTIPLIER=1.0
MAX_POSITION_SIZE=1000.0
STOP_LOSS_ENABLED=true

# System Configuration
DEBUG_MODE=false
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT_HOURS=24

# Monitoring & Alerts
ENABLE_TELEGRAM_ALERTS=true
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=admin@example.com

# Chart Generation
ENABLE_CHARTS=true
CHART_DPI=300
CHART_FORMAT=png

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily