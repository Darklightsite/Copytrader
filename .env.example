# Copytrader Environment Configuration
# Copy this file to .env and fill in your actual values

# Telegram Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
ALLOWED_CHAT_IDS=123456789,987654321

# API Configuration  
API_BASE_URL=https://api.bybit.com
API_KEY=your_global_api_key_here

# Security
API_ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here

# Trading Configuration
MAX_POSITION_SIZE=1.0
MAX_DRAWDOWN=0.1
RISK_PERCENTAGE=0.02

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Development/Production
ENVIRONMENT=development
DEBUG=false

# Database (future use)
# DATABASE_URL=postgresql://user:pass@localhost/copytrader
# REDIS_URL=redis://localhost:6379

# Monitoring (future use)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=8000